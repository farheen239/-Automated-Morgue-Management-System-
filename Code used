import openai

# ----------------------------------------
# ENTER YOUR API KEY HERE
# ----------------------------------------
openai.api_key = "YOUR_API_KEY_HERE"
# ----------------------------------------

print("\nü§ñ JokeBot Activated!")
print("Type 'exit' to quit.\n")

while True:
    user_input = input("You: ")

    if user_input.lower() in ["exit", "quit", "bye"]:
        print("ü§ñ JokeBot: Okay, leaving you alone with your sadness üòÇ")
        break

    # Send to OpenAI
    try:
        response = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",
            messages=[
                {"role": "system", "content": "You are a funny chatbot who tells jokes."},
                {"role": "user", "content": user_input}
            ]
        )

        bot_reply = response["choices"][0]["message"]["content"]
        print(f"ü§ñ JokeBot: {bot_reply}\n")

    except Exception as e:
        print("‚ö†Ô∏è ERROR:", e)
